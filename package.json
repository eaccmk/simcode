{
  "name": "emulator-manager",
  "displayName": "emulator-manager",
  "description": "VS code extension to Manage android emulator and ios simulators",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "emulatormanager": [
        {
          "id": "emulatormanager.android",
          "name": "Android"
        },
        {
          "id": "emulatormanager.ios",
          "name": "Ios",
          "when": "isMac == true"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "emulatormanager.android",
        "contents": "Unable to fetch andoid emulators. Make sure you ANDROID_HOME environemt variable points to correct directory.\nLean more about environment varibales in [android documentation](https://developer.android.com/studio/command-line/variables)",
        "when": "emulatormanager.androidNotAvailable == true"
      },
      {
        "view": "emulatormanager.ios",
        "contents": "Unable to fetch iOS emulators. Make sure you have latest xcode and xcode command line utility are installed",
        "when": "emulatormanager.iosNotAvailable == true"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "emulatormanager",
          "title": "Emulator Manager",
          "icon": "media/icon.svg"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Emulator Manager",
      "properties": {
        "emulatormanager.androidhome": {
          "type": "string",
          "default": "",
          "description": "ANDROID_HOME path"
        }
      }
    },
    "commands": [
      {
        "command": "emulatormanager.openSettings",
        "title": "Open emulator manager setting",
        "category": "Emulator Manager"
      },
      {
        "command": "emulatormanager.android.refreshDevice",
        "title": "Refresh",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "emulatormanager.android.startDevice",
        "title": "Start",
        "icon": "$(debug-start)"
      },
      {
        "command": "emulatormanager.android.stopDevice",
        "title": "Stop",
        "icon": "$(stop-circle)"
      },
      {
        "command": "emulatormanager.ios.refreshDevice",
        "title": "Refresh",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "emulatormanager.ios.startDevice",
        "title": "Start",
        "icon": "$(debug-start)"
      },
      {
        "command": "emulatormanager.ios.stopDevice",
        "title": "Stop",
        "icon": "$(stop-circle)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "emulatormanager.android.refreshDevice",
          "when": "view == emulatormanager.android",
          "group": "navigation"
        },
        {
          "command": "emulatormanager.ios.refreshDevice",
          "when": "view == emulatormanager.ios",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "emulatormanager.android.startDevice",
          "when": "view == emulatormanager.android && viewItem == stopped",
          "group": "inline"
        },
        {
          "command": "emulatormanager.android.stopDevice",
          "group": "inline",
          "when": "view == emulatormanager.android && viewItem == running"
        },
        {
          "command": "emulatormanager.ios.startDevice",
          "when": "view == emulatormanager.ios && viewItem == stopped",
          "group": "inline"
        },
        {
          "command": "emulatormanager.ios.stopDevice",
          "group": "inline",
          "when": "view == emulatormanager.ios && viewItem == running"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/appium-adb": "^9.10.0",
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.191",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "appium-adb": "^9.10.24",
    "lodash": "^4.17.21",
    "node-simctl": "^7.1.12"
  }
}
